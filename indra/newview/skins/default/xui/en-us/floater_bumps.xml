<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<floater name="pushes" title="Bumps, pushes &amp; hits" rect_control="FloaterBumpRect"
 can_close="true" can_drag_on_left="false" can_minimize="true" can_resize="true"
 height="180" min_height="180" min_width="600" width="600">
	<scroll_list name="bump_list" draw_heading="true" multi_select="false"
	 background_visible="true" draw_stripes="true"
	 left="6" bottom="-152" width="588" height="132" follows="left|top|right|bottom">
		<column name="time_stamp" label="Time stamp (SLT)"
		 tool_tip="Time stamp of the last event of this type, in SL time"
		 width="120" dynamicwidth="false" />
		<column name="name" label="Avatar name"
		 tool_tip="Name of the perpetrator avatar"
		 dynamicwidth="true" />
		<column name="magnitude" label="Mag"
		 tool_tip="Magnitude (force) of this event / maximum magnitude for this type of event"
		 width="45" dynamicwidth="false" />
		<column name="type" label="Bump/push/hit type" width="200" dynamicwidth="false"/>
		<column name="number" label="#"
		 tool_tip="Total number of such bumps/hits/pushes for this perpetrator avatar"
		 width="45" dynamicwidth="false" />
		<column name="perp_id" label="" width="0" dynamicwidth="false" visible="false" />
	</scroll_list>
	<button name="clear_btn" label="Clear"
	 tool_tip="Clears the whole list."
	 height="20" width="90" bottom_delta="-22" left="10" follows="left|bottom" />
	<button name="focus_btn" label="Focus"
	 tool_tip="Tries and focuses the camera on the perpetrator avatar for the selected event line."
	 height="20" width="90" bottom_delta="0" left_delta="100" follows="left|bottom" />
	<button name="profile_btn" label="Profile"
	 tool_tip="Shows the profile of the perpetrator avatar for the selected event line."
	 height="20" width="90" bottom_delta="0" left_delta="100" follows="left|bottom" />
	<button name="report_btn" label="Report"
	 tool_tip="To file an abuse report against the perpetrator avatar for the selected event line."
	 height="20" width="90" bottom_delta="0" left_delta="100" follows="left|bottom" />
	<button name="close_btn" label="Close" font="SansSerif" tool_tip="Close the floater"
	 height="20" width="90" bottom_delta="0" right="-10" follows="right|bottom" />
	<string name="none_detected">None detected</string>
	<string name="bump">bump</string>
	<string name="llpushobject">push via a script</string>
	<string name="selected_object_collide">hit with an object</string>
	<string name="scripted_object_collide">hit with a scripted object</string>
	<string name="physical_object_collide">hit with a physical object</string>
	<string name="first_such_event">First such event occured at:</string>
</floater>
