<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<floater name="ban duration" title="Set the ban duration"
 can_close="true" can_minimize="true" can_resize="false" can_drag_on_left="false"
 width="210" height="110" min_width="210" min_height="110">
	<text name="ban_type_text" font="SansSerifSmall"
	 left="10" bottom="-36" width="100" height="16" follows="left|top">
		Ban type:
	</text>
	<radio_group name="ban_type" draw_border="false"
	 left="20" bottom_delta="-20" width="140" height="16" follows="left|top">
		<radio_item name="0" value="0"
		 left="0" bottom="-16" width="80" height="16" follows="left|top">
			Pemanent
		</radio_item>
		<radio_item name="1" value="1"
		 left_delta="45" bottom_delta="0" width="80" height="16" follows="left|top">
			Temporary
		</radio_item>
	</radio_group>
	<spinner name="ban_hours"
	 label="Ban duration (in hours):" label_width="130" font="SansSerifSmall"
	 decimal_digits="0" min_val="1" max_val="8766" increment="1"
	 left="10" bottom_delta="-20" width="190" height="16" follows="left|top" />
	<button name="cancel_btn" label="Cancel" font="SansSerif"
	 left="10" bottom_delta="-28" width="90" height="20" follows="left|top" />
	<button name="ok_btn" label="OK" font="SansSerif"
	 left_delta="100" bottom_delta="0" width="90" height="20" follows="left|top" />
</floater>
