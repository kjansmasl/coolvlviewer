<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<floater name="Pick local material" title="Pick local material"
 can_close="true" can_minimize="true" can_resize="true" can_drag_on_left="false"
 width="242" height="320" min_width="242" min_height="320">
	<scroll_list name="materials_list"
	 column_padding="0" search_column="1" draw_heading="true" multi_select="true"
	 left="6" bottom="-240" width="230" height="220" follows="left|top|right|bottom">
		<column name="name" label="Name" dynamicwidth="true" />
	</scroll_list>
	<check_box name="apply_immediate_check" control_name="ApplyMaterialImmediately"
	 label="Apply immediately" font="SansSerifSmall"
	 left="4" bottom_delta="-20" width="130" height="20" follows="left|bottom" />
	<button name="add_btn" label="Add" font="SansSerifSmall"
	 tool_tip="Click to add new local material(s) to the list above."
	 left="4" bottom_delta="-24" width="74" height="20" follows="left|bottom" />
	<button name="remove_btn" label="Remove" font="SansSerifSmall"
	 tool_tip="Click to remove the selected local material(s) in the list above."
	 left_delta="80" bottom_delta="0" width="74" height="20" follows="left|bottom" />
	<button name="upload_btn" label="Upload" font="SansSerifSmall"
	 tool_tip="Click to upload the selected local material(s) in the list above."
	 left_delta="80" bottom_delta="0" width="74" height="20" follows="left|bottom" />
	<button name="cancel_btn" label="Cancel" font="SansSerif"
	 left="4" bottom_delta="-24" width="114" height="20" follows="right|bottom" />
	<button name="select_btn" label="Select" font="SansSerif"
	 left_delta="120" bottom_delta="0" width="114" height="20" follows="right|bottom" />
</floater>
